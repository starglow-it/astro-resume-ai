{
  "manifest_version": 3,
  "name": "Astro Resume AI",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "48": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "./libs/materialize/css/materialize.css",
        "./libs/materialize/js/materialize.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}