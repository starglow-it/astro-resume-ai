{
  "manifest_version": 3,
  "name": "Astro Resume AI",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "windows",
    "sidePanel",
    "contextMenus"
  ],
  "minimum_chrome_version": "116",
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles/content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "./libs/materialize/css/materialize.css",
        "./libs/materialize/js/materialize.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html",
    "open_mode": "OPEN_ON_CLICK"
  }
}